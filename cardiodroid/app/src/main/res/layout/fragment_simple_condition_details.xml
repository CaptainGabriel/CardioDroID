<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/action_all_directions_padding">

    <TextView
        android:id="@+id/type_detail_textview"
        android:text="TYPE"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/action_all_directions_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        tools:text="Simple"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/type_detail_value"
        android:layout_marginLeft="@dimen/action_all_directions_padding"
        android:layout_marginRight="@dimen/action_all_directions_padding"
        android:layout_alignBaseline="@+id/type_detail_textview"
        android:layout_alignBottom="@+id/type_detail_textview"
        android:layout_toEndOf="@+id/type_detail_textview" />

    <TextView
        android:id="@+id/type_subcondition__detail_textview"
        android:text="OPERATOR"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/action_all_directions_padding"
        android:layout_marginRight="@dimen/action_all_directions_padding"
        android:layout_below="@+id/type_detail_textview"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        tools:text="Equals"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/operator_detail_value"
        android:layout_marginLeft="@dimen/action_all_directions_padding"
        android:layout_marginRight="@dimen/action_all_directions_padding"
        android:layout_alignBaseline="@+id/type_subcondition__detail_textview"
        android:layout_alignBottom="@+id/type_subcondition__detail_textview"
        android:layout_toEndOf="@+id/type_subcondition__detail_textview" />


    <TextView
        android:id="@+id/context_detail_textview"
        android:text="CONTEXT"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/action_all_directions_padding"
        android:layout_marginRight="@dimen/action_all_directions_padding"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/type_subcondition__detail_textview"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Location"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/context_detail_value"
        android:layout_marginLeft="@dimen/action_all_directions_padding"
        android:layout_marginRight="@dimen/action_all_directions_padding"
        android:layout_alignBaseline="@+id/context_detail_textview"
        android:layout_alignBottom="@+id/context_detail_textview"
        android:layout_toEndOf="@+id/context_detail_textview" />

    <TextView
        android:id="@+id/action_detail_textview"
        android:text="ACTIONS"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/action_all_directions_padding"
        android:layout_marginRight="@dimen/action_all_directions_padding"
        android:layout_alignBaseline="@+id/action_detail_value"
        android:layout_alignBottom="@+id/action_detail_value"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        tools:text="Alarm Sound"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/action_detail_value"
        android:layout_marginLeft="@dimen/action_all_directions_padding"
        android:layout_marginRight="@dimen/action_all_directions_padding"
        android:layout_below="@+id/context_detail_textview"
        android:layout_toEndOf="@+id/context_detail_textview"
        android:layout_marginTop="10dp" />


</RelativeLayout>