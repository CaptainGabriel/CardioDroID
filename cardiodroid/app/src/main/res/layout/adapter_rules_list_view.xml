<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLinen"
    android:elevation="2dp"
    android:padding="@dimen/action_all_directions_padding"
    >
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/adapter_item_linear_layout"
      android:orientation="vertical"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:background="@color/colorLinen"
      android:padding="@dimen/action_all_directions_padding"
      android:layout_alignParentStart="true"
      android:layout_toStartOf="@+id/selection_checkbox_widget"
      >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="Large Text"
      android:textStyle="bold"
      android:id="@+id/rule_name_text_view_holder"
      android:textColor="@color/colorPrimary"
      tools:text="Proibe condução com cansaço"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Medium Text"
      android:textStyle="italic"
      android:textColor="@color/colorAccent"
      android:id="@+id/rule_type_text_view_holder"
      tools:text="Composed"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:text="Medium Text"
      android:id="@+id/rule_action_text_view_holder"
      android:textColor="@color/colorPrimaryDark"
      tools:text="Alarm Sound"
      />
    </LinearLayout>
  <android.support.v7.widget.AppCompatCheckBox
      android:id="@+id/selection_checkbox_widget"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/action_all_directions_padding"
      android:textColor="@color/colorAccent"
      android:layout_centerVertical="true"
      android:layout_alignParentEnd="true"
      />
</RelativeLayout>