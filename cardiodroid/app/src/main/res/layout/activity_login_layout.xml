<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    android:id="@+id/login_top_layout"
    tools:context="com.dev.cardioid.ps.cardiodroid.activities.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="CardioDroID"
        android:textSize="42sp"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif-medium"
        android:layout_margin="@dimen/action_all_directions_padding"
        android:padding="@dimen/action_all_directions_padding"
        android:textColor="@color/colorLinen"/>

    <TextView
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/action_all_directions_padding"
        android:padding="@dimen/action_all_directions_padding"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorLinen"
        android:text="Aplicação para apoio à deteção e notificação de estados de fadiga em condução."
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
